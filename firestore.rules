rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write for all authenticated users for now
    // In production, you should implement more specific rules
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for collaboration features
    match /active_form_sessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    match /form_drafts/{draftId} {
      allow read, write: if request.auth != null;
    }
  }
}
